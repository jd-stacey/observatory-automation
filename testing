if rotation_correction_needed:
    logger.info(f"Applying rotation feedback: {rot_offset_deg:+.2f}Â°")
    if hasattr(self.rotator_driver, 'apply_platesolve_feedback'):
        # Use as calibration feedback (preferred - no image jump)
        rotation_success = self.rotator_driver.apply_platesolve_feedback(rot_offset_deg)
        if rotation_success:
            corrections_applied.append("rotation-calibration")
    else:
        # Fallback to discrete move
        rotation_success = self.rotator_driver.apply_rotation_correction(rot_offset_deg)
        if rotation_success:
            corrections_applied.append("rotation-discrete")
