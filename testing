    def _check_all_connections_http_fallback(self):
        """Legacy HTTP-only connection check (fallback if drivers not available)"""
        connected_count = 0
        # Reset status
        for dev in self.device_status.values():
            dev['connected'] = False
            dev['info'] = {}

        # Telescope
        try:
            self.logger.info("Checking telescope via HTTP...")
            tel_info = self._check_alpaca_service_ready('telescope')
            if tel_info and tel_info.get('connected'):
                name = tel_info.get('name', 'Unknown Telescope')
                self.logger.info(f"Telescope connected: {name}")
                self.update_status("Telescope", f"Connected - {name}", "green")
                self.device_status['telescope']['connected'] = True
                self.device_status['telescope']['info'] = tel_info
                connected_count += 1
            else:
                self.logger.warning("Telescope not connected")
                self.update_status("Telescope", "Not Connected", "red")
        except Exception as e:
            self.logger.error(f"Telescope check failed: {e}")
            self.update_status("Telescope", "Check Failed", "red")

        # Rotator
        try:
            self.logger.info("Checking rotator via HTTP...")
            rot_info = self._check_alpaca_service_ready('rotator')
            if rot_info and rot_info.get('connected'):
                pos = rot_info.get('position_deg', 0)
                self.logger.info(f"Rotator connected at {pos:.1f}°")
                self.update_status("Rotator", f"Connected - {pos:.1f}°", "green")
                self.device_status['rotator']['connected'] = True
                self.device_status['rotator']['info'] = rot_info
                connected_count += 1
            else:
                self.logger.warning("Rotator not connected")
                self.update_status("Rotator", "Not Connected", "red")
        except Exception as e:
            self.logger.error(f"Rotator check failed: {e}")
            self.update_status("Rotator", "Check Failed", "red")

        # Cover
        try:
            self.logger.info("Checking cover via HTTP...")
            cover_info = self._check_alpaca_service_ready('cover')
            if cover_info and cover_info.get('connected'):
                state = cover_info.get('cover_state', 'Unknown')
                self.logger.info(f"Cover connected - state: {state}")
                color = "orange" if state == "Open" else "green"
                self.update_status("Cover", f"Connected - {state}", color)
                self.device_status['cover']['connected'] = True
                self.device_status['cover']['info'] = cover_info
                connected_count += 1
            else:
                self.logger.warning("Cover not connected")
                self.update_status("Cover", "Not Connected", "red")
        except Exception as e:
            self.logger.error(f"Cover check failed: {e}")
            self.update_status("Cover", "Check Failed", "red")

        self.logger.info(f"Connection Summary: {connected_count}/3 devices connected")
        if connected_count == 0:
            self.logger.warning("?? No devices connected - check Autoslew status and connections")
        return connected_count
